---
const { title, subtitle, text, url } = Astro.props;
---

<div class="flex">
  <div class="education__time">
    <span class="w-4 h-4 bg-primary block rounded-full mt-1"></span>
    <span class="education__line bg-primary block h-full w-[2px] translate-x-[7px]"></span>
  </div>
  <div class="experience__data bd-grid px-5">
    <h3 class="font-semibold text-2xl mb-1">
      {url ? (
        <a href={url} target="_blank" class="hover:text-primary transition-colors duration-200">
          {title}
        </a>
      ) : (
        title
      )}
    </h3>
    <span class="font-light text-xl mb-1 block">{subtitle}</span>
    <span class="font-light text-lg block">{text}</span>
    <p class="my-2 text-justify">
      <slot />
    </p>
  </div>
</div>
